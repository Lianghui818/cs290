<div class="option_contents">
    <div class="option_contents_image_container">
        <img src="{{url}}" alt="{{name}} Logo">
    </div>
    <div class="option_contents_text_container">
        <h3><a href="/game/{{name}}">{{title}}</a></h3>
    </div>

    <button type="button" class="option_info_button"><i class="fa fa-info-circle" aria-hidden="true"></i></button>
    <div class="option_info_container">
        <div class="option_info_contents">
            <div class="option_info_contents_text">
                <h3>{{title}}</h3>
                <p>{{description}}</p>
            </div>
            <button type="button" class="option_info_close_button"><i class="fa fa-times" aria-hidden="true"></i></button>
        </div>
    </div>
</div>